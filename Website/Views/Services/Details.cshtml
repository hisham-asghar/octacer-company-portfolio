@using Microsoft.Ajax.Utilities
@using Website.Models.ViewModels
@model ServiceViewModel

@{
    ViewBag.Title = "Details";
    ViewBag.PageSliderTitle = Model.HeaderTitle;
    ViewBag.PageSliderImage = Model.HeaderImage;
    ViewBag.PageSliderButtonText = Model.HeaderButtonText;
    ViewBag.PageSliderButtonLink = Model.HeaderButtonLink;
    var counter = 0;
}
<style>
    .bg-light {
        background-color: #fcfcfc;
    }
</style>
<div class="container-fullwidth bottommargin-lg clearfix">

    <div class="heading-block center">
        <h2>@Model.PageTitle</h2>
        <span>@Model.Tagline</span>
    </div>
</div>
@if (Model.FeatureItems != null && Model.FeatureItems.Count > 0)
{
    
    <div class="section nobottommargin">
        <div class="container-fluid clear-bottommargin clearfix text-center" >

            <div class="row topmargin-sm clearfix">
                @foreach (var item in Model.FeatureItems)
                {
                    <div class="col-lg-4 bottommargin">
                        <img src="@item.ImagePath" />
                        <div class="heading-block nobottomborder bottommargin-sm topmargin-sm" >
                            <h4>@item.Title</h4>
                        </div>
                        <span class="before-heading">
                            @item.Text
                        </span>
                    </div>
                }
            </div>

        </div>
    </div>
}
@foreach (var panel in Model.Panels)
{
    
    <div class="container clearfix">
        <div class="row topmargin">
            @if (panel.PanelType == ServicePanelType.RightTextLeftImage)
            {
                <div class="col_two_fifth">
                    <a href="#" data-lightbox="iframe">
                        <img src="@panel.ImagePath" alt="Image">
                    </a>
                </div>
                <div class="col_three_fifth col_last">
                    @if (!panel.Title.IsNullOrWhiteSpace())
                    {
                        <div class="heading-block">
                            <h2>@panel.Title</h2>
                        </div>
                    }
                    @if (!panel.Text.IsNullOrWhiteSpace())
                    {
                        <p style="font-size: 18px;">@panel.Text</p>
                    }
                </div>
            }
            else
            {
                <div class="col_three_fifth">
                    @if (!panel.Title.IsNullOrWhiteSpace())
                    {
                        <div class="heading-block">
                            <h2>@panel.Title</h2>
                        </div>
                    }
                    @if (!panel.Text.IsNullOrWhiteSpace())
                    {
                        <p style="font-size: 18px;">@panel.Text</p>
                    }
                </div>
                <div class="col_two_fifth col_last">
                    <a href="#" data-lightbox="iframe">
                        <img src="@panel.ImagePath" alt="Image">
                    </a>
                </div>
            }


            <div class="clear"></div>
            <div class="divider divider-short divider-center"><i class="icon-crop"></i></div>
        </div>
    </div>
}


